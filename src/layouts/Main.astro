---
import Header from "../components/global/Header.astro";
import Footer from "../components/global/Footer.astro";

export interface Props {
  title?: string;
}

const { title = "Gallery" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&family=Lato:ital,wght@0,400;0,700;1,400;1,700&family=Lobster&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title === "Gallery" ? "Through My Eyes" : `${title} || Through My Eyes`}
    </title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header title={title} />
    <main class="mx-3 md:mx-24 lg:mx-32"><slot /></main>
    <Footer />
  </body>
</html>
